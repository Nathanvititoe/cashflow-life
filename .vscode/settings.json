{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit",
    "source.fixAll.eslint": "explicit" 
  },
  // yaml files for github workflow
  "files.associations": {
    "*.yml": "yaml"
  },
  "yaml.schemas": {
    "none": ["/.github/workflows/*.yml"]
  },
  "yaml.validate": false,
  "problems.decorations.enabled": false,
  "yaml.schemaStore.enable": false,
  // dont format git or github files
  "files.exclude": {
    "**/.git": true,
    "**/.github": true
  },
  // path to prettier config
  "prettier.configPath": "prettier.config.js",
  // requires a config file (its in our repo)
  "prettier.requireConfig": true,
  // will format on save
  "editor.formatOnSave": true,
  // set prettier as default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // prettier formats ts files
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // prettier formats tsx files
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // formats w prettier as you type or paste code
  "editor.formatOnPaste": true,
  "editor.formatOnType": true
}